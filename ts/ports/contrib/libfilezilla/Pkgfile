# Maintainer: Florian Pritz <bluewind@xinu.at>
# Contributor: Martchus <martchus@gmx.net>

name=libfilezilla
version=0.27.1
release=1
source=(https://download.filezilla-project.org/libfilezilla/libfilezilla-$version.tar.bz2)

build() {
  cd "${SRC}/$name-$version"
  ./configure \
    --prefix=/usr \
    --disable-static
  make
  make DESTDIR="${PKG}" install
}
