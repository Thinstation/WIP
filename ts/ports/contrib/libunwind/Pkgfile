name=libunwind
version=1.3.1
release=1
source=("https://download.savannah.gnu.org/releases/$name/$name-$version.tar.gz")

build() {
  cd $name-$version
  ./configure --prefix=/usr
  make
  make check || :
  make DESTDIR="$PKG" install
}

