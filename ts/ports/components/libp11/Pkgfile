name=libp11
version=0.4.10
release=1
source=("https://github.com/OpenSC/${name}/releases/download/${name}-${version}/${name}-${version}.tar.gz")


build() {
  cd "$name-$version"
  ./configure --prefix=/usr --disable-static
  make
  make DESTDIR="$PKG/" install
}
