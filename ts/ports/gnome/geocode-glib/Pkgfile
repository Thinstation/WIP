name=geocode-glib
version="3.26.4"
release=2

build() {
git clone https://gitlab.gnome.org/GNOME/geocode-glib.git
  
  meson $name build -D prefix=/usr 
  ninja -C build

  DESTDIR="$PKG" meson install -C build
}

