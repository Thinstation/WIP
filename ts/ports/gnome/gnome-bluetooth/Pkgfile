name=gnome-bluetooth
version="42.8"
release=1
source=(https://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
	cd $name-$version
        meson . build --prefix=/usr --libdir=/usr/lib
        ninja -C build
        DESTDIR=$PKG ninja -C build install
}
