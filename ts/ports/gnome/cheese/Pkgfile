name=cheese
version="44.1"
release=2

build()
{
  git clone https://gitlab.gnome.org/GNOME/cheese.git

        cd $name

        meson build --prefix=/usr
        DESTDIR=$PKG ninja -C build -j ${JOBS:-1} install
}
