# Description: xorg font font-bh-type1
# URL: http://xorg.freedesktop.org
# Maintainer: CRUX Xorg Team, xorg-ports at crux dot nu
# Depends on: xorg-mkfontdir, xorg-mkfontscale, fontconfig

name=xorg-font-bh-type1
version=1.0.4
release=1
source=(http://xorg.freedesktop.org/releases/individual/font/font-bh-type1-$version.tar.xz)

build() {
	cd font-bh-type1-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install

	rm -f $PKG/usr/share/fonts/X11/Type1/fonts.{dir,scale}
}
