name=libatomic_ops
version="7.8.2"
project=libatomic-ops
release=1
source=(https://github.com/ivmai/libatomic_ops/archive/v$version.tar.gz)

build() {
  cd $name-$version
  ./autogen.sh
  ./configure --prefix=/usr --disable-static --enable-shared
  make
  make DESTDIR="$PKG" install
}
