# Description: Data compression library
# URL: https://lzip.nongnu.org/lzlib.html
# Maintainer: CRUX System Team, core-ports at crux dot nu

name=lzlib
version=1.14
release=1
source=(https://download.savannah.gnu.org/releases/lzip/lzlib/lzlib-$version.tar.gz)

build() {
	cd $name-$version

	./configure --prefix=/usr CFLAGS="$CFLAGS"
	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share
}
