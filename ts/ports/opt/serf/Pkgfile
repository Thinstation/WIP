name=serf
version=1.3.9
release=4
source=(https://www.apache.org/dist/serf/${name}-${version}.tar.bz2{,.asc} scons-python3.patch)

build() {
  cd $name-$version
  patch -p1 -i ../scons-python3.patch
  scons CFLAGS="${CFLAGS}" \
        LINKFLAGS="${LDFLAGS}" \
        PREFIX=/usr GSSAPI=/usr/bin/krb5-config
  install -d "${PKG}/usr"
  scons install --install-sandbox="${PKG}"
}
